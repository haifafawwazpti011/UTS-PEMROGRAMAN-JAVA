    private void jbtnSmdgnActionPerformed(java.awt.event.ActionEvent evt) {                                          
    if (jtxtRslt.getText().isEmpty() || operations == null) {
            return; 
        }
    String answer;
    secondnum = Double.parseDouble(jtxtRslt.getText());
    if (operations.equals("+")) {
        result = firstnum + secondnum;
    } else if (operations.equals("-")) {
        result = firstnum - secondnum;
    } else if (operations.equals("*")) {
        result = firstnum * secondnum;
    } else if (operations.equals("/")) {
        if (secondnum == 0) {
            jtxtRslt.setText("Error: Dibagi Nol");
        operations = null;
        firstnum = 0.0;
            return;
        }
            result = firstnum / secondnum;
        }
    else if (operations.equals("%")) {
        result = firstnum % secondnum;
    }                                         
    if (result == (long) result) {
            answer = String.format("%d", (long) result);
        } else {
    answer = String.format("%.2f", result);
    }
    jtxtRslt.setText(answer);
        operations = null;
        firstnum = result;
    }
    private void jbtnClrActionPerformed(java.awt.event.ActionEvent evt) {                                        
       jtxtRslt.setText("");
        firstnum = 0.0;
        secondnum = 0.0;
        operations = null;
        result = 0.0;
    }                                       

    private void jbtnBckspcActionPerformed(java.awt.event.ActionEvent evt) {                                           
    String backspace = null;
    String currentText = jtxtRslt.getText();
    if (currentText.length() > 0) {
    backspace = currentText.substring(0, currentText.length() - 1);
            jtxtRslt.setText(backspace);
        }
    }                                          

    private void jbtnPrsnActionPerformed(java.awt.event.ActionEvent evt) {                                         
    if (!jtxtRslt.getText().isEmpty()) {
            firstnum = Double.parseDouble(jtxtRslt.getText());
            jtxtRslt.setText("");
            operations = "%";
        }
    }                                        

    private void jbtnplsActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (!jtxtRslt.getText().isEmpty()) {
            firstnum = Double.parseDouble(jtxtRslt.getText());
            jtxtRslt.setText("");
            operations = "+";
        }
    }                                       

